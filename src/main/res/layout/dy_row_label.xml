<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="4dp"
android:orientation="vertical">

<TextView
    android:id="@+id/label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/mat_padding"
    android:text="Title"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="@dimen/editTextValueSize"
    android:textStyle="bold" />



<com.dhwaniris.dynamicForm.utils.TouchImageView
    android:id="@+id/label_image"
    android:layout_below="@id/label"
    android:layout_width="match_parent"
    android:layout_height="@dimen/imageframeHeight"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_camera_new"
    android:visibility="gone" />

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_below="@id/expandable_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mat_margin"
    android:orientation="vertical"
    android:visibility="gone">

</LinearLayout>


<TextView
    android:id="@+id/expandable_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:drawableRight="@drawable/ic_arrow_drop_down_white_24dp"
    android:gravity="center"
    android:padding="@dimen/mat_padding"
    android:text="Title"
    android:textColor="@android:color/white"
    android:textSize="@dimen/dialog_title_text"
    android:visibility="gone" />

</RelativeLayout>









